{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap && lerna link",
    "clean": "lerna run clean --parallel",
    "build-all": "sh ./scripts/build.sh",
    "build-types": "yarn workspace @rarible/types run build",
    "build-action": "yarn workspace @rarible/action run build",
    "build-test-provider": "yarn workspace @rarible/test-provider run build",
    "build-utils": "yarn workspace @rarible/utils run build",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx ./",
    "lint:fix": "eslint --ext .js,.jsx,.ts,.tsx ./ --fix",
    "release": "lerna publish from-package",
    "prettify:packages": "lerna exec -- sort-package-json && sort-package-json",
    "prettify": "run-s prettify:*",
    "test": "lerna run test --parallel",
    "verify": "lerna run verify --parallel",
    "lint-staged": "lint-staged",
    "precommit": "run-s verify lint-staged lint"
  },
  "lint-staged": {
    "**/src/package.json": [
      "yarn run prettify:packages"
    ],
    "package.json": [
      "yarn run prettify:packages"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.15.0",
    "@ethereumjs/common": "2.4.0",
    "@ethereumjs/tx": "3.3.0",
    "eslint": "7.32.0",
    "eth-sig-util": "3.0.1",
    "ethereumjs-util": "7.1.0",
    "ethereumjs-wallet": "1.0.1",
    "husky": "4.3.0",
    "lerna": "4.0.0",
    "lint-staged": "10.4.0",
    "npm-run-all": "4.1.5",
    "sort-package-json": "1.50.0",
    "tslib": "2.3.1",
    "typescript": "4.3.5"
  }
}
