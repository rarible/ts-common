{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6", "dom"],
    "incremental": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "strict": true,
    "declaration": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@rarible/types": ["./packages/types/src"],
      "@rarible/action": ["./packages/action/src"],
      "@rarible/estimate-middleware": ["./packages/estimate-middleware/src"],
      "@rarible/eslint-ts": ["./packages/eslint-ts/src"],
      "@rarible/eslint-react": ["./packages/eslint-react/src"],
      "@rarible/logger": ["./packages/logger/src"],
      "@rarible/utils": ["./packages/utils/src"],
      "@rarible/prettier": ["./packages/prettier/src"]
    }
  }
}
