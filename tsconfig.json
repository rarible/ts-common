{
  "compilerOptions": {
    "target": "ES2015",
    "module": "Node16",

    // Skip declarations and emitting
    // This tsconfig inteded only for dev environment
    "declaration": false,
    "noEmit": true,

    // We don't need to check third parties
    "skipLibCheck": true,

    // Enable strictness
    "strict": true,
    "noImplicitReturns": false,

    "moduleResolution": "Node16",
    "resolveJsonModule": true,
    "allowJs": true,

    // The way how we operate with third party modules
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // Experimental decorators
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
